{
    "name": "Bitjourney : Retro Game Graphics Generator",
    "version": "0.0.1",
    "default_locale" : "en",
    "manifest_version": 3,
    "description": "Bitjourney is a tool for generating retrogame-style images by color reduction and resolution reduction. Bitjourney has smart (old-days) AI and can process images fast and beautifully.",
    "permissions": [
	"contextMenus",
	"clipboardWrite",
	"storage",
	"tabs",
	"activeTab",
    "scripting"
    ],
    "host_permissions": [
	"http://*/",
	"https://*/"
    ],
    "icons":{
	"16": "img/icon-16x16.png",
	"48": "img/icon-48x48.png",
	"128": "img/icon-128x128.png"
	
    },
    "action":{
	"default_icon" : "img/icon-16x16.png",
	"default_popup": "popup.html"
    },
    "content_scripts": [{
	"matches": ["<all_urls>"],
	"js": ["jquery-3.3.1.min.js", "image_parse.js"]
    }],
    "background": {
	"service_worker": "background.js"
    }
}
